{
  "name": "whatsapp-image-sender",
  "version": "1.0.0",
  "description": "WhatsApp Image Sender Application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "server": "node server.js"
  },
  "build": {
    "appId": "com.whatsapp.imagesender",
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "installerIcon": "public/icon.ico",
      "uninstallerIcon": "public/icon.ico",
      "uninstallDisplayName": "WhatsApp Image Sender",
      "license": "license.txt",
      "allowToChangeInstallationDirectory": false
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "qrcode": "^1.5.1",
    "whatsapp-web.js": "^1.19.4"
  },
  "devDependencies": {
    "electron": "^23.1.3",
    "electron-builder": "^24.0.0"
  }
}
